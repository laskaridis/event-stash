<div class="container-fluid">
<div class="row">
  <div class="col-sm-3">
    <ul class="nav nav-pills nav-stacked">
      <li role="presentation" class="active">
        <%= link_to "Event types", event_stash_event_types_path %>
      </li>
    </ul>
  </div>
  <div class="col-sm-9">

    <%= form_tag event_stash_event_types_path,
      method: :get,
      class: "form-inline",
      id: "search_event" do %>

      <div class="form-group">
        <%= text_field_tag :q, params[:q], { placeholder: "Search events by key...", class: "form-control"} %>
        <button type="submit" class="btn btn-default">
          <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        </button>
      </div>

      <%= link_to "New event type", new_event_stash_event_type_path, class: "btn btn-primary pull-right" %>
    <% end %>

    <table class="table table-bordered table-hover table-condensed">
      <thead>
        <th>Key</th>
        <th>Description</th>
        <th>Format</th>
        <th>Transaction</th>
        <th>Created at</th>
        <th>Actions</th>
      </thead>
      <tbody>
        <% if @event_types.empty? %>
          <tr>
            <td colspan="5">
              <p class="text-center">No event types defined</p>
            </td>
          </tr>
        <% end %>
        <% @event_types.each do |event_type| %>
          <tr>
              <td><%= event_type.name %></td>
              <td><%= event_type.description %></td>
              <td><%= event_type.format %></td>
              <td><%= event_type.transaction_type %></td>
              <td><%= l event_type.created_at %></td>
              <td>
                <%= link_to edit_event_stash_event_type_path(event_type), class: "btn btn-default" do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <% end %>

                <%= link_to event_stash_event_type_path(event_type),
                  class: "btn btn-danger",
                  data: { confirm: "Are you sure?" },
                  method: :delete do %>
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                <% end %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @event_types %>
  </div>
</div>
</div>
