<div class="container">
  <div class="row">
    <div class="col-md-7 col-md-offset-2 panel">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>Reset your password</h4>
        </div>
        <div class="panel-body">
          <% if flash[:email_not_found].present? %>
            <div id="message" class="alert alert-danger">
              <p><%= flash[:email_not_found] %></p>
            </div>
          <% end %>
          <%= form_for :password, url: :passwords, html: {class: 'form-horizontal'} do |form| %>
            <div class="form-group">
              <%= form.label :email, t('labels.email'), class: 'col-sm-2 control-label' %>
              <div class="col-sm-7">
                <%= form.email_field :email,
                  class: 'form-control',
                  placeholder: t('placeholders.email'),
                  autofocus: true %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-7">
                <button class="btn btn-default btn-primary" type="submit">
                  Reset my password
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
