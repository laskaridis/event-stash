<div id="login" class="container">
  <%= form_for :session, url: :session, html: {class: 'vertical-form'}  do |form| %>
    <legend><%= t 'headings.login' %></legend>

    <div class="form-group">
      <%= form.email_field :email,
        class: 'form-control',
        placeholder: t('placeholders.email'),
        required: "required",
        autofocus: true %>
    </div>

    <div class="form-group">
      <%= form.password_field :password,
        class: "form-control",
        required: "required",
        placeholder: t("placeholders.password") %>
    </div>

    <div class="form-group">
      <button class="btn btn-primary" type="submit">
        <%= t 'buttons.login' %>
      </button>
    </div>

    <p class="text-center">
    <%= link_to t('links.forgot-password'), new_password_path %>
    </p>
  <% end %>
</div>
