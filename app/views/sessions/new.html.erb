
<div id="login" class="row">
  <div class="col-md-7 col-md-offset-2 panel">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4><%= t 'headings.login' %></h4>
      </div>
      <div class="panel-body">
        <% if flash[:credentials].present? %>
          <div id="message" class="alert alert-danger">
            <p><%= flash[:credentials] %></p>
          </div>
        <% end %>
        <%= form_for :session, url: :session, html: {class: 'form-horizontal'}  do |form| %>
          <div class="form-group">
            <%= form.label :email, t('labels.email'), class: 'col-sm-2 control-label' %>
            <div class="col-sm-7">
              <%= form.email_field :email,
                class: 'form-control',
                placeholder: t('placeholders.email'),
                autofocus: true %>
            </div>
          </div>
          <div class="form-group">
            <%= form.label :password, t('labels.password'), class:'col-sm-2 control-label' %>
            <div class="col-sm-7">
              <%= form.password_field :password,
                class: "form-control",
                placeholder: t("placeholders.password") %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-7">
              <div class="checkbox">
                <label>
                  <input type="checkbox" value="rememberme">
                  <%= t 'labels.remember-me' %>
                </label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-7">
              <button class="btn btn-default btn-primary" type="submit">
                <%= t 'buttons.login' %>
              </button>
              <a href="#"><%= t 'links.forgot-password' %></a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
