
<% @event_type.event_type_attributes.each do |attribute| %>
  <tr>
    <td><%= attribute.name %></td>
    <td><%= attribute.description %></td>
    <td><%= attribute.attribute_type %></td>
    <td>
      <%= link_to edit_event_type_attribute_path(attribute),
        class: "btn btn-default", remote: true do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <% end %>

      <%= link_to event_type_attribute_path(attribute),
        class: "btn btn-danger",
        data: { confirm: "Are you sure?" },
        method: :delete,
        remote: true do %>
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      <% end %>
    </td>
  </tr>
<% end %>
