<!DOCTYPE html>
<html>
<head>
  <title>Scaffold</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <% if logged_in? %>
      <% unless current_user.email_confirmed? %>
        <div id="email-confirmation-warning" class="alert alert-warning">
          <p><%= t('warnings.email') %></p>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="container">

    <div class="header clearfix">
      <nav>
        <ul class="nav nav-pills pull-right">
          <% if logged_out? %>
            <li role="presentation">
              <%= link_to t('buttons.register'), register_path %>
            </li>
            <li role="presentation">
              <%= link_to t('buttons.login'), login_path %>
            <li>
          <% else %>
            <li role="presentation">
              <%= link_to t('buttons.logout'), logout_path %>
            </li>
          <% end %>
          <li role="presentation">
          <a href="#"><%= t 'button.cart' %></a>
          </li>
        </ul>
      </nav>
      <h3 class="text-muted">Project name</h3>
    </div>

    <div class="container main">
      <%= render partial: "/flashes" %>
      <%= yield %>
    </div>

    <div class="footer">
      <p>(c) Comany 2015</p>
    </div>
  </div>
</body>
</html>
